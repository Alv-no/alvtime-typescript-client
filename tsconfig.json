{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es6", "es2015"],
    "types": ["node", "jest"],
    "declaration": true,
    "outDir": "out",
    "sourceMap": true,
    "rootDir": "src",
    "strict": true
  },
  "exclude": ["lib", "node_modules", "src/**/*.test.ts"],
  "include": ["src"]
}
